---
import type { CollectionEntry } from "astro:content";

type LegacyProps = {
  image?: string;
  category?: string;
  title?: string;
  excerpt?: string;
  date?: string | Date;
  readingTime?: number | string;
  link?: string;
};

const { entry, ...legacy } = Astro.props as {
  entry?: CollectionEntry<"articoli">;
} & LegacyProps;

// Unifica i dati (preferisce entry.data)
const data = entry?.data ?? {
  title: legacy.title ?? "",
  excerpt: legacy.excerpt ?? "",
  category: legacy.category ?? "Uncategorized",
  date: legacy.date,
  readingTime:
    typeof legacy.readingTime === "string"
      ? parseInt(legacy.readingTime) || undefined
      : legacy.readingTime,
  image: legacy.image,
};

const slug =
  entry?.slug ??
  (legacy.link ? legacy.link.replace(/^\/blog\/|\/$/g, "") : undefined);

const href = entry
  ? `/blog/${entry.slug}/`
  : legacy.link ?? (slug ? `/blog/${slug}/` : "#");

// --- date utils (come in BlogCard) ---
function toDateSafe(input: unknown): Date | undefined {
  if (input instanceof Date) return isNaN(input.getTime()) ? undefined : input;
  if (typeof input === "string" && input.trim()) {
    const d = new Date(input);
    return isNaN(d.getTime()) ? undefined : d;
  }
  return undefined;
}
function formatDate(input: unknown, locale = "en-US") {
  const d = toDateSafe(input);
  return d
    ? d.toLocaleDateString(locale, { year: "numeric", month: "long", day: "numeric" })
    : "";
}
---

<article class="featured-card blog-article-card" data-category={(data.category || 'uncategorized').toLowerCase()}>
  <div class="featured-image-container">
    {data.image && (
      <img src={data.image} alt={data.title} class="featured-image article-thumb" loading="lazy" />
    )}
  </div>

  {data.category && <span class="featured-category-coi article-category">{data.category}</span>}

  <div class="featured-overlay-coi">
    <h2 class="featured-title-coi article-title">{data.title}</h2>

    {data.excerpt && <p class="featured-excerpt-coi article-excerpt">{data.excerpt}</p>}

    <div class="featured-meta-coi article-meta">
      {formatDate(data.date) && <time datetime={formatDate(data.date)}>{formatDate(data.date)}</time>}
      {data.readingTime && (
        <span>&nbsp; {typeof data.readingTime === "number" ? `${data.readingTime} min read` : data.readingTime}</span>
      )}
    </div>

    <a href={href} class="featured-read-more-coi">READ ARTICLE</a>
  </div>
</article>


<style>
.featured-card {
  position: relative;
  height: 500px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s ease;
  width: 100%;
  max-width: 100%;
  margin: 0 0 4rem 0;
  min-width: 0;
  box-sizing: border-box;
  box-shadow: 0 8px 40px rgba(0,0,0,0.22), 0 1.5px 8px rgba(0,0,0,0.10);
}

/* Cinematic shimmer overlay */
.featured-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(120deg, rgba(0,212,255,0.15), rgba(255,255,255,0) 60%);
  z-index: 1;
  animation: shimmer 8s infinite linear;
  pointer-events: none;
}
@keyframes shimmer {
  from { transform: translateX(-40%); }
  to { transform: translateX(40%); }
}

.featured-card:hover {
  transform: translateY(-10px);
  border-color: rgba(255, 255, 255, 0.3);
}

.featured-image-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.featured-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease, filter 0.3s ease;
  filter: blur(1.2px) grayscale(0.15) brightness(0.98);
}

.featured-card:hover .featured-image {
  transform: scale(1.05);
  filter: none;
}

.featured-category-coi {
  position: absolute;
  top: 1rem;
  left: 2rem;
  display: inline-block;
  padding: 0.3rem 1.2rem;
  background: rgba(0, 212, 255, 0.12);
  border: 1px solid rgba(0, 212, 255, 0.4);
  color: #00D4FF;
  font-size: 1rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  z-index: 3;
  border-radius: 0.2em;
  backdrop-filter: blur(2px);
}

.featured-overlay-coi {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.0) 10%, rgba(0,0,0,0.92) 85%);
  padding: 0 2rem 2.5rem 2rem;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 2;
  height: 100%;
  box-sizing: border-box;
  backdrop-filter: blur(2.5px);
}

.featured-title-coi {
  font-size: 2rem;
  font-weight: 100;
  margin-bottom: 1.2rem;
  line-height: 1.1;
  color: #fff;
  text-shadow: 0 4px 32px rgba(0,0,0,0.45), 0 2px 8px rgba(0,0,0,0.25);
  position: relative;
  display: inline-block;
}

/* Underline animated accent */
.featured-title-coi::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 0%;
  height: 1px;
  background: linear-gradient(90deg, #00D4FF, #7ec9c3);
  transition: width 0.4s ease;
}
.featured-card:hover .featured-title-coi::after {
  width: 100%;
}

.featured-excerpt-coi {
  font-size: 1rem;
  color: #ffffffff;
  margin-bottom: 1.5rem;
  line-height: 1.5;
  max-width: 90%;
  text-shadow: 0 2px 8px rgba(0,0,0,0.35);
}

.featured-meta-coi {
  font-size: 1rem;
  color: #b0c4d4;
  margin-bottom: 1.2rem;
}

.featured-read-more-coi {
  color: #00D4FF;
  font-weight: 600;
  text-decoration: none;
  letter-spacing: 0.04em;
  font-size: 1.1rem;
  text-transform: uppercase;
  transition: color 0.2s;
  margin-top: 0.5rem;
  display: inline-block;
  position: relative;
  padding-right: 1.2rem;
}

/* Animated arrow */
.featured-read-more-coi::after {
  content: "â†’";
  position: absolute;
  right: 0;
  transition: transform 0.3s ease;
}
.featured-read-more-coi:hover {
  color: #fff;
  text-decoration: underline;
}
.featured-read-more-coi:hover::after {
  transform: translateX(6px);
}

/* === Responsive === */
@media (max-width: 900px) {
  .featured-card {
    max-width: 98vw;
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }
  .featured-category-coi {
    left: 1rem;
    top: 1rem;
  }
  .featured-overlay-coi {
    padding-left: 1rem;
    padding-right: 1rem;
  }
}

@media (max-width: 768px) {
  .featured-card {
    height: 400px;
  }
  .featured-title-coi {
    font-size: 1.5rem;
  }
  .featured-overlay-coi {
    padding-bottom: 1.5rem;
  }
}

@media (max-width: 480px) {
  .featured-card {
    height: 300px;
    margin-left: 0.2rem;
    margin-right: 0.2rem;
  }
  .featured-overlay-coi {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
  .featured-category-coi {
    left: 0.5rem;
    top: 0.5rem;
    font-size: 0.8rem;
    padding: 0.2rem 0.7rem;
  }
}
</style>

