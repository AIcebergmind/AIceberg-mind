---
const defaultTags = [
  { slug: 'ai', name: 'AI' },
  { slug: 'ethics', name: 'Ethics' },
  { slug: 'education', name: 'Education' },
  { slug: 'research', name: 'Research' },
];

const { tags = [], activeTag = null } = Astro.props;
const finalTags = tags.length > 0 ? tags : defaultTags;
---

<div class="blog-tags">
  {finalTags.map(tag => (
    <button
      class={`tag-filter ${activeTag === tag.slug ? 'active' : ''}`}
      data-tag={tag.slug}>
      {tag.name}
    </button>
  ))}
</div>
<style>
  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0 2rem;
  }

  .blog-tags .tag-filter {
    padding: 0.3rem 0.75rem;
    border-radius: 9999px; /* pill shape */
    font-size: 0.85rem;
    border: 1px solid rgba(255,255,255,0.3);
    background: rgba(255,255,255,0.05);
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .blog-tags .tag-filter:hover {
    background: rgba(255,255,255,0.15);
    border-color: rgba(255,255,255,0.5);
  }

  .blog-tags .tag-filter.active {
    background: #fff;
    color: #111;
    border-color: #fff;
    font-weight: 600;
  }
</style>

<div class="blog-tags">
  {finalTags.map(tag => (
    <button
      class={`tag-filter ${activeTag === tag.slug ? 'active' : ''}`}
      data-tag={tag.slug}>
      {tag.name}
    </button>
  ))}
</div>