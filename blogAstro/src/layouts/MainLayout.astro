---
const { title = '', description = '' } = Astro.props;
const fallbackTitle = title || 'Blog';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{fallbackTitle}</title>
  <meta name="description" content={description} />

  <!-- CSS fondamenta -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/global-styles.css" />

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <!-- Google Fonts (restano quelli che usi qui) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&family=Crimson+Pro:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

  <!-- (Facoltativo per prototipi) Tailwind CDN -->
  <!-- <script src="https://cdn.tailwindcss.com"></script> -->
</head>

<body>
  <!-- Skip link accessibile -->
  <a class="skip-link" href="#main-content">Skip to content</a>

  <!-- Particles Background -->
  <canvas id="particles-background" aria-hidden="true"></canvas>

  <!-- Kandinsky/Kazimir header in CSS puro (tuo) -->
  <!-- <HeaderKandinsky /> -->

  <!-- Page Content -->
  <main id="main-content">
    <slot />
  </main>

  <!-- Scripts -->
  <script src="/js/hotspot.js" defer></script>
  <script src="/js/modules/neural-network.js" type="module" defer></script>
  <script type="module">
    import { NeuralNetwork } from '/js/modules/neural-network.js';
    new NeuralNetwork();
  </script>

  <style>
    /* Solo ci√≤ che serve davvero qui. Il resto sta in editorialAstro.css */
    #particles-background{
      position: fixed; inset: 0; width: 100%; height: 100%;
      z-index: var(--z-background, -1); pointer-events: none;
    }
  </style>
</body>
</html>
