---
import MainLayout from './MainLayout.astro';
const { title, description, category, date, readingTime, author, tags, categories = [], activeCategory = 'all' } = Astro.props;
---

<MainLayout title={title} description={description}>
  <!-- ====== PROGRESS BAR ====== -->
  <div id="scroll-progress"></div>

  <article class="blog-article">
    <header class="article-header">
      <p class="article-meta">{category} â€” {date} â€¢ {readingTime}</p>
      <h1 class="article-title">{title}</h1>
      {author && <p class="article-author">By {author}</p>}
    </header>

    <!-- ====== CATEGORY FILTERS ====== -->
    <div class="blog-categories">
      <!-- Bottone "All" -->
      <button 
        class={`category-filter ${activeCategory === 'all' ? 'active' : ''}`} 
        data-category="all">
        All
      </button>

      <!-- Bottoni per ogni categoria -->
      {categories.map(category => (
        <button 
          class={`category-filter ${activeCategory === category.slug ? 'active' : ''}`} 
          data-category={category.slug}>
          {category.name}
        </button>
      ))}
    </div>

    <!-- ====== CONTENUTO ARTICOLO ====== -->
    <div class="article-content">
      <slot />
    </div>

    <!-- ====== TAGS ====== -->
    {tags?.length > 0 && (
      <footer class="article-footer">
        <p>Tags:</p>
        <ul class="article-tags">
          {tags.map(tag => <li>{tag}</li>)}
        </ul>
      </footer>
    )}

    <!-- ====== SHARE BUTTON ====== -->
    <button
      class="share-btn"
      data-share
      data-title={title}
      data-url={Astro.url}
    >
      ðŸ“¤ Share
    </button>
  </article>

  <!-- ====== SCROLL TO TOP BUTTON ====== -->
  <button id="scroll-to-top" title="Go to top">â†‘</button>

  <!-- ====== SCRIPTS ====== -->
  <script src="/js/blog-extras.js" type="module" defer></script>
</MainLayout>

<style>
/* Progress bar */
#scroll-progress {
  position: fixed;
  top: 0;
  left: 0;
  height: 4px;
  background: var(--color-accent, #00D4FF);
  width: 0%;
  z-index: 9999;
}

/* Blog categories */
.blog-categories {
  display: flex;
  justify-content: center;
  gap: var(--spacing-sm, 0.5rem);
  margin: 2rem 0;
  flex-wrap: wrap;
}

.category-filter {
  padding: 0.8rem 1.5rem;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.05rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.category-filter:hover,
.category-filter.active {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
}

/* Article styles */
.blog-article {
  max-width: 800px;
  margin: 0 auto;
  padding: 6rem 1.5rem;
}

.article-header {
  margin-bottom: 2rem;
}

.article-meta {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.6);
}

.article-title {
  font-size: 2.4rem;
  font-weight: 600;
  margin: 0.5rem 0 1rem;
  color: #fff;
}

.article-author {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.7);
}

.article-content {
  font-size: 1.05rem;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.85);
}

.article-footer {
  margin-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1rem;
}

.article-tags {
  list-style: none;
  display: flex;
  gap: 0.6rem;
  flex-wrap: wrap;
}

.article-tags li {
  padding: 0.3rem 0.7rem;
  background: rgba(0, 212, 255, 0.1);
  border: 1px solid rgba(0, 212, 255, 0.3);
  color: #00D4FF;
  font-size: 0.85rem;
}

/* Scroll to top */
#scroll-to-top {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  padding: 0.8rem 1rem;
  font-size: 1.4rem;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  opacity: 0;
  transform: scale(0.9);
  transition: opacity 0.3s ease, transform 0.3s ease;
  z-index: 9999;
}

/* Share button */
.share-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.6rem 1.2rem;
  background: rgba(0, 212, 255, 0.15);
  border: 1px solid rgba(0, 212, 255, 0.3);
  color: #151515ff;
  cursor: pointer;
  font-size: 0.9rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05rem;
  margin-top: 2rem;
  border-radius: 30px;
  transition: background 0.3s ease, transform 0.2s ease;
}

.share-btn:hover {
  background: rgba(0, 212, 255, 0.3);
  transform: translateY(-2px);
}

.share-btn:active {
  transform: translateY(0);
}

</style>
